                            <!--    <a href="#" class="list-group-item b-0"><i class="fa fa-paper-plane-o m-r-10"></i>Sent Mail</a>-->
                            <!--    <a href="#" class="list-group-item b-0"><i class="fa fa-trash-o m-r-10"></i>Trash <b>(354)</b></a>-->
                            <!--</div>-->


                        </div>

                    </div>
                    <!-- End Left sidebar -->

                    <!-- Right Sidebar -->
                    <div class="col-lg-9 col-md-8">

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box m-t-20">
                                    <h4 class="m-t-0"><b><%=data.title%></b></h4>

                                    <hr/>

                                    <div class="media m-b-30 ">
                                        <a href="#" class="pull-left">
                                            <img alt="" src="/images/users/avatar-2.jpg" class="media-object thumb-sm img-circle">
                                        </a>
                                        <div class="media-body">
                                            <span class="media-meta pull-right"><%=data.due_date%></span>
                                            <h4 class="text-primary m-0"><%=data.writer_id%></h4>
                                            <small class="text-muted"><%=data.contact%></small>
                                        </div>
                                    </div> <!-- media -->

                                    <p><b><%=data.summary%></b></p>
                                    <%=data.content%>
                                    <hr/>

                                    <h4> <i class="fa fa-paperclip m-r-10 m-b-10"></i> Attachments <span>(3)</span> </h4>

                                    <div class="row">
                                        <div class="col-sm-2 col-xs-4">
                                            <a href="#"> <img src="/images/small/img1.jpg" alt="attachment" class="img-thumbnail img-responsive"> </a>
                                        </div>
                                        <div class="col-sm-2 col-xs-4">
                                            <a href="#"> <img src="/images/small/img2.jpg" alt="attachment" class="img-thumbnail img-responsive"> </a>
                                        </div>
                                        <div class="col-sm-2 col-xs-4">
                                            <a href="#"> <img src="/images/small/img3.jpg" alt="attachment" class="img-thumbnail img-responsive"> </a>
                                        </div>
                                    </div>
                                </div>
                                <% if(user) {%>
                                    여기도 다시해야함 이거 user랑 그거랑 같은지 보기
                                <div class="text-right">
                                    <form action="/med/<%= data._id %>">
                                        <button type="submit" class="btn btn-primary waves-effect waves-light w-md m-b-30">수정하기</button>
                                    </form>
                                    <form action="/med/<%= data._id %>?_method=delete" method="post">
                                        <button type="submit" class="btn btn-primary waves-effect waves-light w-md m-b-30">삭제하기</button>
                                    </form>
                                </div>
                                <%}%>
                            </div>
                        </div>

                    </div> <!-- end Col-9 -->

                </div><!-- End row -->




                <%include footer%>

            </div> <!-- end container -->
        </div>
        <!-- End wrapper -->


        
        <!-- jQuery  -->
        <%include mainjs%>

        <!-- summer note -->
        <script src="/js/plugins/summernote.min.js"></script>

       

        <script>
            jQuery(document).ready(function(){

                $('.summernote').summernote({
                    airMode: true
                });
            });
        </script>


