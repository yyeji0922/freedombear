                                            var month = ("0"+due_dateformat.getMonth().toString()).substr(-2);
                                            var date = ("0"+due_dateformat.getDate().toString()).substr(-2);
                                            var year = due_dateformat.getFullYear().toString();
                                            var hour = ("0"+due_dateformat.getHours().toString()).substr(-2);
